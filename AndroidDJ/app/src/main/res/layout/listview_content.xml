<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TableRow 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="5dp">
    <TextView 
        android:id="@+id/listViewItem"
        android:text="@string/VotingTextView"/>
    
    </TableRow>
    
   <TableRow 
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:padding="5dp">

       <LinearLayout
           android:layout_height="wrap_content"
           android:layout_width="match_parent"
           android:orientation="horizontal">


    <Button
        android:id="@+id/upvote"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_column="0"
        android:textSize="12sp"
        android:onClick="upvoteSong"
        android:text="@string/upvote" />
    
   <TextView
        android:id="@+id/upvoteCount"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_column="1"
        android:textSize="12sp"/>
    
   <Button
        android:id="@+id/downvote"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:onClick="downvoteSong"
        android:text="@string/downvote"
        android:layout_column="2"
        android:textSize="12sp"
         />

   <TextView
        android:id="@+id/downvoteCount"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_column="3"
        android:textSize="12sp"/>

   <Button
       android:id="@+id/saveSong"
       android:layout_width="wrap_content"
       android:layout_height="40sp"
       android:text="Save"
       android:onClick=""
       android:layout_column="4"
       android:textSize="12sp"/>

   </LinearLayout>

    </TableRow>
    <TableRow 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="5dp">
        <TextView 
        android:id="@+id/votedByUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="10sp"
        android:textSize="16sp"
        />
    </TableRow>
    
  

</TableLayout>